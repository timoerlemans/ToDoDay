{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html"
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.associations": {
    "*.scss": "scss"
  },
  "angular.enable-strict-mode-prompt": true,
  "angular.view-engine": false,
  "angular.analytics": false,
  "angular.schematics": {
    "component": {
      "style": "scss",
      "standalone": true,
      "changeDetection": "OnPush"
    },
    "service": {
      "standalone": true
    },
    "pipe": {
      "standalone": true
    },
    "directive": {
      "standalone": true
    }
  }
} 